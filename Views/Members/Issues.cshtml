@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Issued Books";
}

<h1>Issued Books</h1>

<form asp-action="Issues">
    <div class="form-row">
        <div class="col-md-3">
            <input class="form-control" placeholder="Search..." type="text" name="searchTerm" value="@ViewData["currentFilter"]" />
        </div>
        <div class="col-md-9">
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Issues">Back to Full List</a>
        </div>
    </div>
</form>

<br />
<div class="table-responsive-lg">
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
